# ============================================
# DentaMate Universal .env Template
# ============================================
# Copy this to your service repo and customize
# ============================================

# Application
NODE_ENV=development
PORT=3000
SERVICE_NAME=dentamate-xxx-service
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# API Gateway
API_GATEWAY_URL=http://localhost:3000

# Redis (if needed)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (Gmail API) - Only for notification service
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_FROM_EMAIL=

# SMS (Twilio) - Only for notification service
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payment (Razorpay) - Only for billing service
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# File Storage
STORAGE_TYPE=local
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,dcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Add service-specific variables below this line
# ============================================
